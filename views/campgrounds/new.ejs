<% include ../partials/header %>

<div class="container">
    <div class ="row">  
        <h1 style="text-align: center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="location">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Campground name"></input>
            </div>
            <div class="form-group">
                <label for="location">Price</label>
                <input class="form-control" type="number" name="price" placeholder="Campground price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">  
            <label for="location">Image URL</label>
                <input class="form-control" type="text" name="image" placeholder="Image URL"></input>
            </div>
             <div class="form-group"> 
                <label for="location">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Description"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>